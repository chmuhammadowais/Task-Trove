<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.TaskTrove" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/black</item> <!-- Set status bar color -->
        <item name="android:navigationBarColor">@color/black</item> <!-- Set navigation bar color if needed -->
    </style>

    <!-- Splash screen theme -->
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/app_logo</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/white</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">@color/white</item>
        <item name="android:statusBarColor">@color/black</item> <!-- Set status bar color for splash screen -->
        <item name="android:navigationBarColor">@color/black</item> <!-- Set navigation bar color for splash screen if needed -->
    </style>

</resources>
